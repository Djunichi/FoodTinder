{
  "family": "foodtinder-task",
  "networkMode": "bridge",
  "containerDefinitions": [
    {
      "name": "foodtinder-app",
      "image": "470727823954.dkr.ecr.us-east-1.amazonaws.com/foodtinder-app:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "environment": [
        { "name": "MONGO_URI", "value": "mongodb://localhost:27017/foodtinder" },
        { "name": "DATABASE_URL", "value": "postgres://admin:admin@localhost:5432/foodtinder?sslmode=disable" }
      ],
      "memory": 256,
    },
    {
      "name": "postgres",
      "image": "postgres:15",
      "essential": false,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 5432
        }
      ],
      "environment": [
        { "name": "POSTGRES_USER", "value": "admin" },
        { "name": "POSTGRES_PASSWORD", "value": "admin" },
        { "name": "POSTGRES_DB", "value": "foodtinder" }
      ]
    },
    {
      "name": "mongo",
      "image": "mongo:6",
      "essential": false,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 27017,
          "hostPort": 27017
        }
      ]
    }
  ]
}